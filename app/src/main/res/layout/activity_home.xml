<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/tittleView"
        android:layout_width="624dp"
        android:layout_height="89dp"
        android:background="@android:color/holo_orange_light"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="0dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="92dp"
        android:layout_height="88dp"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/iconupra"
        tools:layout_editor_absoluteX="43dp"
        android:layout_marginTop="0dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="325dp"
        android:layout_height="112dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageButton6"
        app:srcCompat="@drawable/zone1" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="325dp"
        android:layout_height="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/zone1"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton5" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="325dp"
        android:layout_height="112dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/zone1"
        app:layout_constraintBottom_toTopOf="@+id/imageButton6"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="325dp"
        android:layout_height="112dp"
        android:elevation="14dp"
        android:onClick="onClickZone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/zone1"
        app:layout_constraintBottom_toTopOf="@+id/imageButton5"
        app:layout_constraintTop_toBottomOf="@+id/tittleView" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Estacionamiento UPRA"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tittleView"
        app:layout_constraintTop_toBottomOf="@+id/tittleView"
        app:layout_constraintRight_toLeftOf="@+id/tittleView"
        app:layout_constraintLeft_toRightOf="@+id/tittleView"
        app:layout_constraintHorizontal_bias="0.576"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/textZone1View"
        android:layout_width="116dp"
        android:layout_height="31dp"
        android:text="Zona 1"
        android:textAlignment="center"
        android:textSize="24sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/imageButton4"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintLeft_toRightOf="@+id/imageButton4"
        app:layout_constraintRight_toLeftOf="@+id/imageButton4"
        app:layout_constraintTop_toBottomOf="@+id/imageButton4"
        app:layout_constraintVertical_bias="0.482" />

    <TextView
        android:id="@+id/textZoneView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zona 4"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/imageButton"
        app:layout_constraintLeft_toRightOf="@+id/imageButton"
        app:layout_constraintRight_toLeftOf="@+id/imageButton"
        app:layout_constraintTop_toBottomOf="@+id/imageButton" />

</android.support.constraint.ConstraintLayout>
